html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="Description" content="101 amazing audio-guided practices to discover art, yourself and others in art museums.")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title The Mindful Eye: audio-guided practices

		<!-- build:css css/styles.min.css-->
		link(href="./css/main.css" rel="stylesheet")
		link(href="./css/menu.css" rel="stylesheet")
		link(href="./css/landing.css" rel="stylesheet")
		link(href="./css/media.css" rel="stylesheet")
		link(href="./css/onboarding.css" rel="stylesheet")
		link(href="./css/nav.css" rel="stylesheet")
		link(href="./css/audiobar.css" rel="stylesheet")
		link(href="./css/tracklist.css" rel="stylesheet")
		link(href="./css/carousel.css" rel="stylesheet")
		link(href="./css/about.css" rel="stylesheet")
		link()
		<!-- endbuild -->
		
		link(rel="manifest" href="./manifest.json")
		link(href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/barba.js/1.0.0/barba.min.js" type="text/javascript")

	body
		include images/svg-symbols.svg
		include views/menu.pug
		include views/audiobar.pug
		
		#wrapper
			.arcs
			#barba-wrapper
				#content.barba-container
					.arc.bottom
					.arc.top
					block content
		#global-back
			a(href="javascript:void(0);" onclick="app.back()").back
				+icon('chevron-left').xsmall
		#mode
			.solo(onclick="app.handleSoloClick()")  solo
			.partner(onclick="app.handleDuoClick()")  partner

	block scripts
		<!-- build:js js/main.min.js -->
		script(src="./js/app-controller.js" type="text/javascript")
		script(src="./js/menu-controller.js" type="text/javascript")
		script(src="./js/data.js" type="text/javascript")
		script(src="./js/media-controller.js" type="text/javascript")
		script(src="./js/audiobar-controller.js" type="text/javascript")
		script(src="./js/tracklist-controller.js" type="text/javascript")
		script(src="./js/nav-controller.js" type="text/javascript")
		script(src="./js/onboarding-controller.js" type="text/javascript")
		script(src="./js/carousel-controller.js" type="text/javascript")
		script()
		<!-- endbuild -->



