svg(style="width:0;height:0;position:absolute;" aria-hidden="true" focusable="false")
	defs
		linearGradient(id="blue-gradient" x2="1" y2="1")
			animate(attributeName="y2" values="1; 3; 2" dur="4s" repeatCount="1")
			stop(offset="0%" stop-color="var(--blue-light-color)")
			stop(offset="100%" stop-color="var(--blue-color)")
	defs
		linearGradient(id="yellow-gradient" x2="1" y2="1")
			stop(offset="0%" stop-color="var(--yellow-light-color)")
			stop(offset="15%" stop-color="var(--yellow-color)")
			<animate xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#yellow-gradient" id="anim-yellow-gradient" attributeName="y2" dur="800ms" to="10" fill="freeze"></animate>
	defs
		linearGradient(id="orange-gradient" x2="1" y2="1")
			stop(offset="0%" stop-color="var(--orange-light-color)")
			stop(offset="100%" stop-color="var(--orange-color)")
	defs
		linearGradient(id="teal-gradient" x2="1" y2="1")
			animate(attributeName="y2" values="1; 3; 2" dur="4s" repeatCount="1")
			stop(offset="0%" stop-color="var(--teal-light-color)")
			stop(offset="100%" stop-color="var(--teal-color)")
	defs
		linearGradient(id="indigo-gradient" x2="1" y2="1")
			animate(attributeName="y2" values="1; 3; 2" dur="4s" repeatCount="1")
			stop(offset="0%" stop-color="var(--indigo-light-color)")
			stop(offset="100%" stop-color="var(--indigo-color)")
	defs
		linearGradient(id="gray-gradient" x2="1" y2="1")
			animate(attributeName="y2" values="1; 3; 2" dur="4s" repeatCount="1")
			stop(offset="0%" stop-color="var(--indigo-light-color)")
			stop(offset="100%" stop-color="var(--indigo-color)")
		mask(id="Mask")
			rect(x="0" y="0" width="500" height="200" fill="url(#Gradient)")
	
