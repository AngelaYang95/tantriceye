include carousel.pug

#onboarding(data-controller="onboarding").hide
	+carousel(3)
		+carousel-item("", "Welcome to \n The Tantric Eye")
			.buttons
				button(onclick='onboarding.handleNextClick()') Skip Intro
		+carousel-item("", "How will you be practising?")
			.buttons
				button(onclick='onboarding.handleSoloClick()').solo I'm by myself
				button(onclick='onboarding.handleDuoClick()').duo I'm with a partner
		+carousel-item("tantric-eye-duo", "Let's take a minute \n to arrive.")
			.buttons
				button(onclick='onboarding.handleFinishClick()') Finish